<p id="notice"><%= notice %></p>

<h1>Empréstimos Ativos</h1>

<table>
  <thead>
    <tr>
      <th>Usuário</th>
      <th>Sala</th>
      <th>Registro de Entrada</th>
      <th>Registro de Saída</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loans.ativos.each do |loan| %>
      <tr>
        <td><%= loan.user.nome %></td>
        <td><%= loan.room.title %></td>
        <td><%= loan.input_register.strftime("%H:%M:%S %d/%m/%Y") %></td>
        <td><%= if loan.output_register == nil
                  button_to "Registrar Devolução", {:controller => :loans, :action => 'devolver', :id => loan.id }, :method => :post
                else
                  loan.output_register.strftime("%H:%M:%S %d/%m/%Y")
                end %></td>
        <td><%= link_to 'Show', loan %></td>
        <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
        <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <br>
  <%= link_to 'New Loan', new_loan_path %>
