
<h1>Listando Salas</h1>
<%= will_paginate @rooms %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Localização</th>
      <th colspan="2" id="btn_novo"><%= link_to 'Nova Sala', new_room_path, class: "btn btn-block btn-success" %></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.order(title: :asc).each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td id="coluna_novo"><%= link_to 'Editar', edit_room_path(room), class: "btn btn-sm btn-default" %></td>
        <td id="coluna_novo"><%= link_to 'Apagar', room, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-sm btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @rooms %>
