
<h1>Usuários Ativos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Matricula</th>
      <th>Servidor</th>
      <th>Administrador</th>
      <th colspan="2" id="btn_novo"><%= link_to 'Novo Usuário', new_user_path, class: "btn btn-block btn-success" %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.order(nome: :asc).each do |user| %>
      <tr>
        <td><%= user.nome %></td>
        <td><%= user.matricula %></td>
        <td><%= user.servidor ? 'Sim' : 'Não' %></td>
        <td><%= user.admin ? 'Sim' : 'Não' %></td>
        <% if user == @user_logado or @user_logado.admin %>
            <td id="coluna_novo"><%= link_to 'Editar', edit_user_path(user), class: "btn btn-sm btn-default" %></td>
            <td id="coluna_novo"><%= link_to 'Apagar', user, method: :delete, data: { confirm: 'Tem certeza?' }, class: "btn btn-sm btn-default" %></td>
        <% else %>
            <td id="coluna_novo"></td>
            <td id="coluna_novo"></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
